<% form_for([@category, @forum]) do |f| %>
  <%= f.error_messages %>

  <div class="block">
    <h2><%=h header_block %></h2>
    <p>
      <%= f.label :name, _("Name") %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description, _("Description") %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit button_name %>
    </p>
  </div>
<% end %>
